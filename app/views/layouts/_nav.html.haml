%li
  = link_to photos_path do
    %i.icon-camera-retro
    Photos
%li.dropdown
  %a.dropdown-toggle{data: { toggle: "dropdown", target: "#"} }
    Profil
    %b.caret
  %ul.dropdown-menu(role="menu")
    %li
      = link_to edit_current_user_path do
        %i.icon-key
        Change Password
    %li
      = link_to logout_path  do
        %i.icon-off
        Log out


%li.dropdown
  = link_to shares_path, class: "dropdown-toggle", data: {toggle: "dropdown", target: "#"} do
    %i.icon-share
    Shares
    %b.caret
  %ul.dropdown-menu(role="menu")
    %li= link_to "New Share",shares_path
    - Share.find_each do |share|
      %li= link_to share, share


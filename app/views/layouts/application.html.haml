!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : I18n.t("title")
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = stylesheet_link_tag "application", :media => "all"
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/


  %body(data-target="#yearbar" data-spy="scroll" data-offset="40")
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"}=I18n.t "title"
          .container.nav-collapse
            %ul.nav
              - if current_user
                = render "layouts/nav"
              - else
                %li=link_to "Login", login_path
                %li=link_to "Impressum", "http://stefanwienert.net/impressum/"
    .container
      .row
        .span2
          #sidebar
            = yield :sidebar
          .clear#sidebar-spanner
        .span10
          = yield
    #loader(style="display: none;")
      = image_tag "loader.gif"

    = javascript_include_tag "application"
